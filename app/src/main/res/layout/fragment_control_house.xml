<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_control_home1">

    <RelativeLayout
        android:id="@+id/rela2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="200dp"
            android:id="@+id/imageView"
            android:background="@drawable/gas"/>
        <TextView
            android:id="@+id/gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240dp"
            android:text="800"
            android:textColor="@color/sang"
            android:textSize="35dp" />
        <com.example.seekarc_library.SeekArc
            android:id="@+id/seekTemp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            seekarc:arcColor="@color/default_blue_light"
            seekarc:clockwise="true"
            seekarc:max="50"
            seekarc:progress="29"
            seekarc:progressColor="@color/colorPrimary"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/scrubber_control_pressed_holo"
            seekarc:touchInside="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65dp"
            android:text="29Â°C"
            android:textColor="@color/sang"
            android:textSize="35dp" />
        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_below="@+id/temp"
            android:text="Temperature"
            android:textColor="@color/sang"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="200dp"
            android:id="@+id/imageView1"
            android:background="@drawable/contrast"/>
        <TextView
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="245dp"
            android:text="150"
            android:textColor="@color/sang"
            android:textSize="35dp" />
        <com.example.seekarc_library.SeekArc
            android:id="@+id/seekArc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            seekarc:arcColor="@color/default_blue_light"
            seekarc:clockwise="true"
            seekarc:max="100"
            seekarc:progress="89"
            seekarc:progressColor="@color/colorPrimary"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/scrubber_control_pressed_holo"
            seekarc:touchInside="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/seekArcProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:text="89%"
            android:textColor="@color/sang"
            android:textSize="35dp" />
        <TextView
            android:id="@+id/textspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/seekArcProgress"
            android:text="Humidity"
            android:textColor="@color/sang"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/Gps_size"
            android:text="Light"/>
        <Switch
            android:id="@+id/Laze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/Gps_size"
            android:text="Fan"/>
        <Switch
            android:id="@+id/BedRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>